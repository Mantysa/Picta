<p id="notice"><%= notice %></p>

<div class="card">
	<div class="card-body">
		<p>
		  <%= image_tag @pic.avatar.variant(resize_to_limit: [300, 300]) %>
		  <strong>Description:</strong>
		  <%= @pic.description %>
		</p>
	</div>
	<div class="card-footer">
		<% if @pic.user == current_user %>
			<%= link_to 'Edit', edit_pic_path(@pic) %> |
		<% end %>
		<%= link_to 'Back', pics_path %>
	</div>
</div>