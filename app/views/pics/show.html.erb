<div class="row">
	<div class="col-md-offset-2 col-md-8">
		<div class="card">
			<div class="panel-header center">
				<%= image_tag @pic.avatar.variant(resize_to_limit: [300, 300]) %>
			</div>
			<div class="card-body">
				<%= @pic.description %><br/>
				<%= @pic.user.name %>
				<% if @pic.user == current_user %>
					<%= link_to 'Edit', edit_pic_path(@pic) %> |
				<% end %>
				<%= link_to 'Back', pics_path %>
			</div>
		</div>
	</div>
</div>