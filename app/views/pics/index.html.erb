<p id="notice"><%= notice %></p>

<div id="pics" class="jumbotron">
  <% @pics.each do |pic| %>
    <div class="box">
      <div class="card">
        <%= link_to image_tag(pic.avatar.variant(resize_to_limit: [100, 100])), pic %><br/>
        <div class="card-body">
          <%= pic.description %><br/>
        </div>
        <% if pic.user == current_user %>
          <div class="card-footer">
            <%= link_to 'Edit', edit_pic_path(pic) %><br/>
            <%= link_to 'Destroy', pic, method: :delete, data: { confirm: 'Are you sure?' } %><br/>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>